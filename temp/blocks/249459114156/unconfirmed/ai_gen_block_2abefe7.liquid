    display: block;
    width: 100%;
    padding: 20px;
  }

  .ai-product-atc-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: {{ block.settings.alignment }};
    width: {{ block.settings.desktop_width_percent }}%;
    margin: 0 auto;
  }

  .ai-product-atc-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    text-align: {{ block.settings.alignment }};
  }

  .ai-product-atc-button-{{ ai_gen_id }} {
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-product-atc-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-product-atc-modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    align-items: center;
    justify-content: center;
  }

  .ai-product-atc-modal-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-product-atc-modal-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.modal_bg_color }};
    border-radius: {{ block.settings.modal_border_radius }}px;
    padding: 32px;
    max-width: 500px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    position: relative;
  }

  .ai-product-atc-modal-close-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    right: 16px;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: {{ block.settings.modal_text_color }};
    padding: 4px;
    line-height: 1;
  }

  .ai-product-atc-modal-close-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-product-atc-modal-title-{{ ai_gen_id }} {
    font-size: 24px;
    color: {{ block.settings.modal_text_color }};
    margin: 0 0 24px;
  }

  .ai-product-atc-variant-group-{{ ai_gen_id }} {
    margin-bottom: 20px;
  }

  .ai-product-atc-variant-label-{{ ai_gen_id }} {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.modal_text_color }};
    margin-bottom: 8px;
  }

  .ai-product-atc-variant-options-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .ai-product-atc-variant-option-{{ ai_gen_id }} {
    padding: 10px 16px;
    background-color: {{ block.settings.variant_bg_color }};
    color: {{ block.settings.variant_text_color }};
    border: 1px solid {{ block.settings.variant_border_color }};
    border-radius: {{ block.settings.variant_border_radius }}px;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 14px;
  }

  .ai-product-atc-variant-option-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.variant_hover_bg_color }};
    color: {{ block.settings.variant_hover_text_color }};
    border-color: {{ block.settings.variant_hover_border_color }};
  }

  .ai-product-atc-variant-option-{{ ai_gen_id }}.selected {
    background-color: {{ block.settings.variant_selected_bg_color }};
    color: {{ block.settings.variant_selected_text_color }};
    border-color: {{ block.settings.variant_selected_border_color }};
  }

  .ai-product-atc-variant-option-{{ ai_gen_id }}.disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .ai-product-atc-quantity-{{ ai_gen_id }} {
    margin-bottom: 20px;
  }

  .ai-product-atc-quantity-label-{{ ai_gen_id }} {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.modal_text_color }};
    margin-bottom: 8px;
  }

