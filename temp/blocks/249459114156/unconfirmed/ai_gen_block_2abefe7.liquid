{% endstyle %}

<product-atc-{{ ai_gen_id }} class="ai-product-atc-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-atc-container-{{ ai_gen_id }}">
    {% if block.settings.product %}
      <h2 class="ai-product-atc-title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h2>
      <button
        class="ai-product-atc-button-{{ ai_gen_id }}"
        data-open-modal
      >
        {{ block.settings.button_text }}
      </button>
    {% else %}
      <div class="ai-product-atc-empty-{{ ai_gen_id }}">
        Select a product to display
      </div>
    {% endif %}
  </div>

  {% if block.settings.product %}
    <div class="ai-product-atc-modal-{{ ai_gen_id }}" data-modal>
      <div class="ai-product-atc-modal-content-{{ ai_gen_id }}">
        <button class="ai-product-atc-modal-close-{{ ai_gen_id }}" data-close-modal aria-label="Close">Ã—</button>
        
        <h3 class="ai-product-atc-modal-title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h3>
        
        <div class="ai-product-atc-price-{{ ai_gen_id }}" data-price>
          {{ block.settings.product.price | money }}
        </div>

        {% if block.settings.product.has_only_default_variant %}
          <input type="hidden" data-variant-id value="{{ block.settings.product.selected_or_first_available_variant.id }}">
        {% else %}
          {% for option in block.settings.product.options_with_values %}
            <div class="ai-product-atc-variant-group-{{ ai_gen_id }}">
              <label class="ai-product-atc-variant-label-{{ ai_gen_id }}">{{ option.name }}</label>
              <div class="ai-product-atc-variant-options-{{ ai_gen_id }}" data-option-index="{{ forloop.index0 }}">
                {% for value in option.values %}
                  <button
                    type="button"
                    class="ai-product-atc-variant-option-{{ ai_gen_id }}"
                    data-option-value="{{ value }}"
                    data-option-position="{{ option.position }}"
                  >
                    {{ value }}
                  </button>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        {% endif %}

        <div class="ai-product-atc-quantity-{{ ai_gen_id }}">
          <label class="ai-product-atc-quantity-label-{{ ai_gen_id }}">Quantity</label>
          <input
            type="number"
            class="ai-product-atc-quantity-input-{{ ai_gen_id }}"
            value="1"
            min="1"
            data-quantity
          >
        </div>

        <button
          class="ai-product-atc-modal-button-{{ ai_gen_id }}"
          data-add-to-cart
        >
          Add to cart
        </button>
      </div>
    </div>
  {% endif %}
</product-atc-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductAtc{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.product = {{ block.settings.product | json }};
        this.selectedOptions = {};
      }

      connectedCallback() {
        this.modal = this.querySelector('[data-modal]');
        this.openButton = this.querySelector('[data-open-modal]');
        this.closeButton = this.querySelector('[data-close-modal]');
        this.addToCartButton = this.querySelector('[data-add-to-cart]');
        this.quantityInput = this.querySelector('[data-quantity]');
        this.priceElement = this.querySelector('[data-price]');
        this.variantOptions = this.querySelectorAll('[data-option-value]');

        if (!this.product) return;

        this.setupEventListeners();
        this.initializeVariants();
      }

      setupEventListeners() {
        if (this.openButton) {
          this.openButton.addEventListener('click', () => this.openModal());
        }

        if (this.closeButton) {
          this.closeButton.addEventListener('click', () => this.closeModal());
        }

        if (this.modal) {
          this.modal.addEventListener('click', (e) => {
            if (e.target === this.modal) {
              this.closeModal();
            }
          });
        }

        this.variantOptions.forEach(option => {
          option.addEventListener('click', (e) => this.handleOptionClick(e));
        });

        if (this.addToCartButton) {
          this.addToCartButton.addEventListener('click', () => this.addToCart());
        }
      }

      initializeVariants() {
        if (this.product.has_only_default_variant) {
          return;
        }

        this.product.options_with_values.forEach((option, index) => {
          this.selectedOptions[`option${index + 1}`] = option.values[0];
        });

        this.updateVariantSelection();
      }

      handleOptionClick(e) {
        const button = e.currentTarget;
        const position = button.dataset.optionPosition;
        const value = button.dataset.optionValue;

        this.selectedOptions[`option${position}`] = value;

        const container = button.closest('[data-option-index]');
        container.querySelectorAll('.ai-product-atc-variant-option-{{ ai_gen_id }}').forEach(btn => {
          btn.classList.remove('selected');
        });
        button.classList.add('selected');

        this.updateVariantSelection();
      }

      updateVariantSelection() {
        const selectedVariant = this.product.variants.find(variant => {
          return variant.option1 === this.selectedOptions.option1 &&
                 variant.option2 === this.selectedOptions.option2 &&
                 variant.option3 === this.selectedOptions.option3;
        });

        if (selectedVariant) {
          this.currentVariant = selectedVariant;
          
          if (this.priceElement) {
            this.priceElement.textContent = this.formatMoney(selectedVariant.price);
          }

          if (this.addToCartButton) {
            this.addToCartButton.disabled = !selectedVariant.available;
            this.addToCartButton.textContent = selectedVariant.available ? 'Add to cart' : 'Sold out';
          }

          this.updateAvailableOptions();
        }
      }

      updateAvailableOptions() {
        this.variantOptions.forEach(option => {
          const position = option.dataset.optionPosition;
          const value = option.dataset.optionValue;

          const testOptions = { ...this.selectedOptions };
          testOptions[`option${position}`] = value;

          const hasAvailableVariant = this.product.variants.some(variant => {
            return variant.option1 === testOptions.option1 &&
                   variant.option2 === testOptions.option2 &&
                   variant.option3 === testOptions.option3 &&
                   variant.available;
          });

          if (hasAvailableVariant) {
            option.classList.remove('disabled');
          } else {
            option.classList.add('disabled');
          }
        });
      }

      openModal() {
        if (this.modal) {
          this.modal.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      }

      closeModal() {
        if (this.modal) {
          this.modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      }

      async addToCart() {
        const variantId = this.product.has_only_default_variant
          ? this.querySelector('[data-variant-id]').value
          : this.currentVariant.id;
        
        const quantity = parseInt(this.quantityInput.value) || 1;

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: quantity
            })
          });

          if (response.ok) {
            this.closeModal();
            
            window.dispatchEvent(new CustomEvent('cart:refresh'));
            
            if (window.theme && window.theme.cart) {
              window.theme.cart.refresh();
            }
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
        }
      }

      formatMoney(cents) {
        const amount = cents / 100;
        return new Intl.NumberFormat('{{ localization.language.iso_code }}', {
          style: 'currency',
          currency: '{{ cart.currency.iso_code }}'
        }).format(amount);
      }
    }

    customElements.define('product-atc-{{ ai_gen_id }}', ProductAtc{{ ai_gen_id }});
  })();
</script>

